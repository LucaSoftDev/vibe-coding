{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node10",
    "types": ["node"],
    "isolatedModules": false
  },
  "include": [
    "src/domain/**/*.ts",
    "src/stores/productStore.ts",
    "src/types/**/*.ts",
    "src/boot/axios.ts",
    "src/services/httpClient.ts",
    "src/env.d.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".test-dist"]
}
